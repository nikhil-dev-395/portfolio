<section id="about" class="w-full h-auto pt-1 pb-12">
  <div class="w-full h-auto space-y-10" id="box-container">
    <!-- First Box -->
    <div id="box1" class="w-[1150px] h-[340px] mx-auto grid grid-cols-2 gap-4">
      <!-- Left Section -->
      <div
        id="lft-img"
        class="flex items-end justify-start rounded-3xl h-full bg-gradient-to-r from-gray-700 via-gray-800 to-gray-900 p-6"
      >
        <p class="text-2xl font-bold text-left mb-7 ml-3 max-w-80 text-white">
          My primary goal is to make dynamic websites using the MERN stack
        </p>
      </div>

      <!-- Right Section -->
      <div id="rightinfo" class="flex flex-col justify-center space-y-4">
        <!-- Right Top Content -->
        <div
          id="rightop1"
          class="mb-4 rounded-3xl bg-gradient-to-r from-gray-700 via-gray-800 to-gray-900 p-6"
        >
          <p class="text-2xl font-bold text-left mb-3 ml-3 max-w-80 text-white">
            I'm very flexible with time zone communications
          </p>
        </div>

        <!-- Right Bottom Content -->
        <div
          id="rightop2"
          class="p-6 rounded-3xl border  flex items-center space-x-6 "
          style="background-color: #000319;"
        >
          <div class="details">
            <p class="text-sm text-slate-200">I constantly try to improve</p>
            <h3 class="text-3xl font-extrabold text-white leading-tight">
              my tech stack
            </h3>
          </div>
          <div id="tech-stack" class="grid grid-cols-2 gap-1 text-center">
            <span
              class="inline-block bg-slate-500 px-3 py-1 rounded-full text-white text-sm"
              >Node.js</span
            >
            <span
              class="inline-block bg-slate-500 px-3 py-1 rounded-full text-white text-sm"
              >JavaScript</span
            >
            <span
              class="inline-block bg-slate-700 px-3 py-1 rounded-full text-white text-sm"
              >Express.js</span
            >
            <span
              class="inline-block bg-slate-500 px-3 py-1 rounded-full text-white text-sm"
              >MongoDB</span
            >
            <span
              class="inline-block bg-slate-500 px-3 py-1 rounded-full text-white text-sm"
              >React</span
            >
          </div>
        </div>
      </div>
    </div>

    <!-- Second Box with Incremented IDs -->
    <div
      id="box2"
      class="w-[1150px] h-[340px] mx-auto grid grid-cols-2 gap-4"
      style="margin-top: 152px"
    >
      <!-- Right Section -->
      <div id="rightinfo2" class="flex flex-col justify-center space-y-4">
        <!-- Right Top Content -->
        <div id="rightop12" class="mb-4 rounded-3xl border p-6 ">
          <p class="text-2xl font-bold text-left mb-3 ml-3 max-w-80 text-white">
            Tech enthusiast with a drive for innovation
          </p>
        </div>

        <!-- Right Bottom Content -->
        <div
          id="rightop22"
          class="p-6 rounded-3xl border border-slate-600 flex items-center space-x-6"
        >
          <div class="leading-9">
            <p class="text-slate-200 text-bold text-2xl mb-6">
              Would you like to collaborate on a project?
            </p>

            <div
              id="copy-email"
              class="inline-block gap-3 border border-purple-500 py-2 px-5 rounded-md"
            >
              <div class="flex px-3 py2">
                <img src="/icons/copy.svg" alt="copy img" />
                <span>copy email</span>
              </div>
            </div>
          </div>
        </div>
      </div>
      <!-- Left Section -->
      <div
        id="lft-img2"
        class="flex items-end justify-start rounded-3xl h-full bg-gradient-to-r from-gray-700 via-gray-800 to-gray-900 p-6"
      >
        <p class="text-2xl font-bold text-left mb-7 ml-3 max-w-80 text-white">
                <%= whatAreDoingNowDays %>
                <%= myEmail %>
                <%= myGithubLink %> <%= myName %>

          <!--here add your current working  -->
        </p>
      </div>
    </div>
  </div>
</section>
